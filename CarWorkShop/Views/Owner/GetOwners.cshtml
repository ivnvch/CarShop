@model IEnumerable<CarWorkShop.Models.ViewModel.Owner.OwnerViewModel>

@{
    Layout = "_Layout";
    ViewBag.Title = "Пользователи";
}

<div class="card col-md-12" style="margin: 10px;">
    <div class="card-buttons-group">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="CreateOwner" asp-controller="Owner">Добавить</a> 
        }
    </div>
</div>

<div style="padding: 10px;"></div>
<div class="card col-md-12">
    <table class="table table-striped">
        <thead class="table-light">
        <tr>
            <th scope="col">Логин</th>
            <th scope="col">Роль</th>
            <th scope="col">#</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in @Model)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.Role</td>
                <td>
                    <form asp-controller="Owner" asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>