@using CarWorkShop.Models.ViewModel.Account
@model RegisterViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Регистрация";
}



<div style="padding: 20px;"></div>

<div class="content">
    <div class="row">
    <span class="anchor"></span>
        <div class="card-account">
            <div class="card-header">
                <h3 class="mb-0 text-center paragraphHome text-black">Регистрация</h3>
            </div>
            <div class="card-body by">
                <form asp-action="Register" asp-controller="Account">
                    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact" class="text-danger text-center"></div>
                        <div class="mb-3 by">
                            <input type="email" placeholder="Логин" class="form-control" asp-for="Login" aria-describedby="emailHelp">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" autocomplete="new-password" asp-for="Password" placeholder="Пароль">
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" autocomplete="new-password" asp-for="PasswordConfirm" placeholder="Подтвердить пароль">
                        </div>
  
                    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                </form>
            </div>
        </div>
    </div>
</div>